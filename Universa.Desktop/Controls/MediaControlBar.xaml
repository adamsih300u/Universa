<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="Universa.Desktop.Controls.MediaControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Universa.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800"
             Visibility="Collapsed">
    <UserControl.Resources>
        <converters:TextOverflowConverter x:Key="TextOverflowConverter"/>
    </UserControl.Resources>
    <Border Background="{DynamicResource WindowBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="0,1,0,0">
        <Grid Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Center Panel -->
            <StackPanel Grid.Column="1" 
                      Orientation="Horizontal" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                
                <!-- Now Playing Text -->
                <TextBlock x:Name="NowPlayingText" 
                           Text="No track playing"
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                           VerticalAlignment="Center"
                           MinWidth="400"
                           MaxWidth="800"
                           Margin="0,0,10,0"/>

                <!-- Timeline Slider -->
                <Slider x:Name="TimelineSlider"
                        Width="240"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Thumb.DragStarted="TimelineSlider_DragStarted"
                        Thumb.DragCompleted="TimelineSlider_DragCompleted"
                        ValueChanged="TimelineSlider_ValueChanged"/>

                <!-- Time Display -->
                <TextBlock x:Name="TimeInfo"
                         Text="00:00 / 00:00"
                         VerticalAlignment="Center"
                         Margin="10,0"/>

                <!-- Playback Controls -->
                <Button x:Name="PreviousButton"
                        Content="⏮"
                        Width="30"
                        Height="30"
                        Margin="10,0,5,0"
                        Click="PreviousButton_Click"
                        ToolTip="Previous"/>
                <Button x:Name="PlayPauseButton"
                        Content="▶"
                        Width="30"
                        Height="30"
                        Margin="0,0,5,0"
                        Click="PlayPauseButton_Click"
                        ToolTip="Play/Pause"/>
                <Button x:Name="StopButton"
                        Content="⏹"
                        Width="30"
                        Height="30"
                        Margin="0,0,5,0"
                        Click="StopButton_Click"
                        ToolTip="Stop"/>
                <Button x:Name="NextButton"
                        Content="⏭"
                        Width="30"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="NextButton_Click"
                        ToolTip="Next"/>

                <!-- Add Shuffle Button -->
                <ToggleButton x:Name="ShuffleButton"
                             Content="🔀"
                             Width="30"
                             Height="30"
                             Margin="0,0,10,0"
                             Click="ShuffleButton_Click"
                             ToolTip="Shuffle"/>

                <!-- Volume Controls -->
                <ToggleButton x:Name="MuteButton"
                             Content="🔊"
                             Width="30"
                             Height="30"
                             Margin="0,0,5,0"
                             Click="MuteButton_Click"
                             ToolTip="Mute"/>
                <Slider x:Name="VolumeSlider"
                        Width="100"
                        Minimum="0"
                        Maximum="1"
                        Value="1"
                        ValueChanged="VolumeSlider_ValueChanged"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl> 